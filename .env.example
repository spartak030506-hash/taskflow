# Django
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL
DB_NAME=taskflow
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db          # "db" для Docker, "localhost" для локальной разработки
DB_PORT=5432

# Redis (кеш, Celery, WebSocket)
REDIS_HOST=redis    # "redis" для Docker, "localhost" для локальной разработки
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@taskflow.local

# CORS (разрешённые домены фронтенда, через запятую)
CORS_ALLOWED_ORIGINS=http://localhost:3000
