# PRODUCTION настройки
# Копировать в .env на VPS: cp .env.production.example .env
# ОБЯЗАТЕЛЬНО изменить все значения ниже!

# Django
# Сгенерировать: python3 -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=CHANGE_ME_TO_RANDOM_50_CHARS
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,YOUR_VPS_IP
DJANGO_SETTINGS_MODULE=config.settings.production

# PostgreSQL
DB_NAME=taskflow_prod   
DB_USER=taskflow_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (SMTP для production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=CHANGE_ME_TO_APP_PASSWORD
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Monitoring (опционально, для Sentry)
# SENTRY_DSN=
